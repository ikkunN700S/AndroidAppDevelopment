<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <TextView
        android:id="@+id/labelTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Transport"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/labelTransport"
        app:layout_constraintStart_toEndOf="@+id/labelTransport"/>

    <TextView
        android:id="@+id/labelIpadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IPアドレス"
        app:layout_constraintTop_toBottomOf="@+id/textTransport"
        app:layout_constraintStart_toStartOf="@+id/labelTransport"/>

    <TextView
        android:id="@+id/textIpadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/labelIpadress"
        app:layout_constraintStart_toEndOf="@+id/labelIpadress"/>

</androidx.constraintlayout.widget.ConstraintLayout>